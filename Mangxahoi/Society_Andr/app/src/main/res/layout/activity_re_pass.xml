<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repassword"
    android:padding="16dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Back Button -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="6dp"
            android:background="@android:color/transparent" />

        <!-- Username -->

        <!-- Title and Description -->
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="ngocvotam27"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <!-- Current Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Your password must be at least 6 characters and should include a combination of numbers, letters and special characters (!$@%)."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/oldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:hint="Current password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- New Password -->
        <EditText
            android:id="@+id/newPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_edittext"
            android:hint="New password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Re-type New Password -->
        <EditText
            android:id="@+id/reNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_edittext"
            android:hint="Re-type new password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp" />
        <!-- Forgot Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:paddingTop="15dp" />

        <!-- Log Out of Other Devices Checkbox -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out of other devices. Choose this if someone else used your account."
            android:textStyle="bold"
            android:paddingTop="20dp" />

        <!-- Change Password Button -->
        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/blue"
            android:enabled="false"
            android:padding="12dp"
            android:text="Change password"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>



