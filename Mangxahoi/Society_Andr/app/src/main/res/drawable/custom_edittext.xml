<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi FOCUS (được chọn) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền -->
            <stroke android:width="1dp" android:color="#AAAAAA"/> <!-- Viền khi focus -->
            <corners android:radius="8dp"/> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường (không focus) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Viền nhạt -->
            <corners android:radius="8dp"/> <!-- Bo góc -->
        </shape>
    </item>

</selector>
